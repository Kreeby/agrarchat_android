<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".AnswerQuestion">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stheiti_medium"
        android:text="AgrarForum"
        android:textColor="#236B8E"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />


    <TextView
        android:id="@+id/sual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stheiti_medium"
        android:text="Cavab"
        android:textColor="#000"
        android:textSize="25dp"
        app:layout_constraintVertical_bias="0.088"
        app:layout_constraintHorizontal_bias="0.167"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <EditText
        android:id="@+id/answer_itself"
        android:layout_width="237dp"
        android:layout_height="214dp"
        android:background="@drawable/text_edit_form"
        android:fontFamily="@font/stheiti_medium"
        android:gravity="center"
        android:hint="Cavabiniz"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sual"
        app:layout_constraintVertical_bias="0.303" />

    <Button
        android:id="@+id/post_question"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/stheiti_medium"
        android:text="POST"
        android:textColor="#FFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_itself" />


</android.support.constraint.ConstraintLayout>