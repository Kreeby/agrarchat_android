<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context=".RegisterActivity"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stheiti_medium"
        android:text="AgrarForum"
        android:textColor="#236B8E"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/registrasiya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stheiti_light"
        android:text="Registrasiya"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.063" />


    <EditText
        android:id="@+id/email"
        android:layout_width="315.62dp"
        android:layout_height="52dp"
        android:background="@drawable/shape_edit"
        android:fontFamily="@font/stheiti_medium"
        android:inputType="textPersonName"
        android:hint="Email"
        android:textAlignment="center"
        android:textColor="#707070"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrasiya"
        app:layout_constraintVertical_bias="0.1035" />


    <EditText
        android:id="@+id/username"
        android:layout_width="315.62dp"
        android:layout_height="52dp"
        android:background="@drawable/shape_edit"
        android:fontFamily="@font/stheiti_medium"
        android:inputType="textPersonName"
        android:hint="Ad və Soyad"
        android:textAlignment="center"
        android:textColor="#707070"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5005"
        app:layout_constraintVertical_bias="0.07805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />


    <EditText
        android:id="@+id/password_reg"
        android:layout_width="315.62dp"
        android:layout_height="52dp"
        android:background="@drawable/shape_edit"
        android:fontFamily="@font/stheiti_medium"
        android:inputType="textPassword"
        android:hint="Password"
        android:textAlignment="center"
        android:textColor="#707070"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5005"
        app:layout_constraintVertical_bias="0.07805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_reg"
        android:text="Mən mütəxəssisəm"
        android:textStyle="bold"
        android:fontFamily="@font/stheiti_light"
        android:textColor="#236b8e"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintVertical_bias="0.047"
        android:buttonTint="#FFFFFF"
        android:onClick="selectItem"/>


    <Spinner
        android:id="@+id/random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintVertical_bias="0.047"

        />



    <ImageView
        android:layout_width="171dp"
        android:layout_height="169dp"
        android:alpha="0.1"
        android:src="@drawable/tractor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />



    <Button
        android:id="@+id/registerbutton"
        android:layout_width="185dp"
        android:layout_height="45dp"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintVertical_bias="0.2305"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/stheiti_medium"
        android:onClick="onClick"
        android:text="Proceed"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/random" />


</android.support.constraint.ConstraintLayout>