<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".AddQuestionActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stheiti_medium"
        android:text="AgrarForum"
        android:textColor="#236B8E"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />


    <TextView
        android:id="@+id/sual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stheiti_medium"
        android:text="Sual"
        android:textColor="#000"
        android:textSize="25dp"
        app:layout_constraintVertical_bias="0.088"
        app:layout_constraintHorizontal_bias="0.167"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/categories_questions"
        android:layout_width="237dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sual"
        app:layout_constraintVertical_bias="0.048" />


    <Button
        android:id="@+id/upload_image"
        android:layout_width="237dp"
        android:layout_height="53dp"
        android:background="@drawable/search_for_question"
        android:fontFamily="@font/stheiti_medium"
        android:gravity="center"
        android:hint="Upload video or photo"
        android:textSize="12dp"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categories_questions"
        app:layout_constraintVertical_bias="0.047" />


    <EditText
        android:id="@+id/question_itself"
        android:layout_width="237dp"
        android:layout_height="214dp"
        android:background="@drawable/text_edit_form"
        android:fontFamily="@font/stheiti_medium"
        android:hint="Sualınız"
        android:gravity="center"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_image"
        app:layout_constraintVertical_bias="0.047" />


    <Button
        android:id="@+id/post_question"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/stheiti_medium"
        android:text="POST"
        android:textColor="#FFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_itself" />


</androidx.constraintlayout.widget.ConstraintLayout>